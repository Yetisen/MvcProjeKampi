@model EntityLayer.Concrete.Category

@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1>Yeni Katagori ekleme sayfası</h1>
<br />
@using (Html.BeginForm("AddCategory","Category",FormMethod.Post))
{
    @*baslangıç formu oluşturdum bu form buraki kısımların ne zaman nerde çalışacağını belirler*@

<div class="form-group">
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.CatergoryName)
    @Html.ValidationMessageFor(x => x.CatergoryName)
    <br /><br />
    @Html.Label("Açıklamayı Yazınız")
    @Html.TextBoxFor(x => x.CatergoryDescription)
    @Html.ValidationMessageFor(x => x.CatergoryDescription)
    <br /><br />
    <button>Kaydet</button>
</div>
}

